extends layout

block content

  #banner.jumbotron
    .container
      h1 Deception: Murder in Hong Kong

  .container
    .row
      .col-sm-6
        h2 Start a New Game
        form#startForm(action="/start", method="POST", role="form")
          .form-group
            .checkbox
              label
                input(name='extraRoles', type='checkbox', value='accmp')
                | Use 'Accomplice' Role
            .checkbox
              label
                input(name='extraRoles', type='checkbox', value='wtnss')
                | Use 'Witness' Role
          .form-group
            label(for="playerName") Name
            input#playerName.form-control(type="text", name="player-name", placeholder="Player 1")
          button.btn.btn-primary(type="submit") Start Game
      .col-sm-6
        h2 Join an Existing Game
        form#joinForm(action="/join", method="POST", role="form")
          .form-group
            label(for="gameID") Game ID
            input#gameID.form-control(type="text", name="game-id")
          .form-group
            label(for="playerName") Name
            input#playerName.form-control(type="text", name="player-name", placeholder="Player 2", maxlength="9")
          button.btn.btn-primary(type="submit") Join Game

  script(src="/js/jquery.min.js")
  script(src="/js/bootstrap.min.js")